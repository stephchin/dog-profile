<% if @sort %>
  <%= link_to 'Reset Sort', sort: nil%>
<% else%>
  <%= link_to 'Sort', sort: true%>
<% end %>
<% @dogs.each_with_index do |dog, i| %>
  <%= render partial: 'thumbnail', locals: { dog: dog } %>
  <% if ((i+1)%2).zero? %>
    <%= image_tag 'ad.jpg' %>
  <% end %>
<% end %>

<%= paginate @dogs %>
